{
    "title": "Keyboard Layout Switch",
    "rules": [
        {
            "description": "left_option+1 to Change input lang to English.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "1",
                        "modifiers": {
                            "mandatory": [
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "select_input_source": {
                                "language": "en"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "description": "left_option+2 to Change input lang to Hebrew.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "2",
                        "modifiers": {
                            "mandatory": [
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "select_input_source": {
                                "language": "he"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "description": "left_option alone to toggle English to Hebrew input.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_option",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "select_input_source": {
                                "language": "he"
                            }
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "conditions": [
                        {
                            "input_sources": [
                                {
                                    "language": "en"
                                }
                            ],
                            "type": "input_source_if"
                        }
                    ],
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 100
                    }
                }
            ]
        },
        {
            "description": "left_option alone to toggle Hebrew to English input.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_option",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "select_input_source": {
                                "language": "en"
                            }
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "conditions": [
                        {
                            "input_sources": [
                                {
                                    "language": "he"
                                }
                            ],
                            "type": "input_source_if"
                        }
                    ],
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 100
                    }
                }
            ]
        }
    ]
}
