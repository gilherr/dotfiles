{
    "title": "Keyboard Layout Switch",
    "rules": [
        {
            "description": "left_option+1 to Change input lang to UnicodeHexInput.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "1",
                        "modifiers": {
                            "mandatory": [
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "select_input_source": {
                                "input_source_id": "com.apple.keylayout.UnicodeHexInput"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "description": "left_option+2 to Change input lang to Hebrew.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "2",
                        "modifiers": {
                            "mandatory": [
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "select_input_source": {
                                "language": "he"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "description": "left_option+3 to Change input lang to English.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "3",
                        "modifiers": {
                            "mandatory": [
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "select_input_source": {
                                "language": "en"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "description": "WIP holding left_option will change to hebrew",
            "comment": "this ruins the opt+1 and opt+2 to change layout manually. https://github.com/pqrs-org/Karabiner-Elements/issues/1667",
            "comment2": "to_delayed_action: { to_if_canceled: [ { key_code: left_optione } ] },",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "parameters": {
                        "basic.to_if_alone_timeout_milliseconds": 250,
                        "basic.to_if_held_down_threshold_milliseconds": 250
                    },
                    "to_if_held_down": [
                        {
                            "select_input_source": {
                                "language": "he"
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "select_input_source": {
                                "language": "en"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "description": "left_option alone to toggle English to Hebrew input.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_option",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "select_input_source": {
                                "language": "he"
                            }
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "conditions": [
                        {
                            "input_sources": [
                                {
                                    "language": "en"
                                }
                            ],
                            "type": "input_source_if"
                        }
                    ],
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 100
                    }
                }
            ]
        },
        {
            "description": "left_option alone to toggle Hebrew to English input.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_option",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "select_input_source": {
                                "language": "en"
                            }
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "conditions": [
                        {
                            "input_sources": [
                                {
                                    "language": "he"
                                }
                            ],
                            "type": "input_source_if"
                        }
                    ],
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 100
                    }
                }
            ]
        }
    ]
}
